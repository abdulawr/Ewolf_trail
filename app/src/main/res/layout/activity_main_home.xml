<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activities.Main_Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

<!--Animation-->
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:onClick="Amination"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/purple_700"
            app:cardElevation="7dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/animation"
                    android:layout_height="50dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Animation"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--Animation-->
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="Add_YOur_Pets"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#F44336"
            app:cardElevation="7dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/add_pet_blue_icon"
                    android:layout_height="50dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Your Pet"
                    android:maxLines="1"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <!--Animation-->
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:onClick="YOur_Pets_List"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#D32F2F"
            app:cardElevation="7dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/pet_list_blue_icon"
                    android:layout_height="50dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your Pet List"
                    android:maxLines="1"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <!--Animation-->
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:onClick="Buy_Pets"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#1E88E5"
            app:cardElevation="7dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/buy_pets_blue_icon"
                    android:layout_height="50dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Buy Pets"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!--Animation-->
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:onClick="Sell_Pets"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#707070"
            app:cardElevation="7dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/sell_blue_icon"
                    android:layout_height="50dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sell Pets"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <!--Animation-->
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:onClick="Sell_Pets_List"
            app:cardBackgroundColor="#9C27B0"
            app:cardElevation="7dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/sell_pet_list_blue"
                    android:layout_height="50dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sell Post List"
                    android:maxLines="1"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <!--Animation-->
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:onClick="Chat_Now"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#AFB42B"
            app:cardElevation="7dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_horizontal"
