<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activities.View_Post_Details">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rec"
        android:scrollbars="none"/>

    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:paddingLeft="16dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pet Information"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_weight="0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:id="@+id/name"
                    android:layout_marginLeft="16dp"
                    android:textSize="17sp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="DOB"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_weight="0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DOB"
                    android:id="@+id/dob"
                    android:layout_marginLeft="16dp"
                    android:textSize="17sp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="Color"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_weight="0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Color"
                    android:id="@+id/color"
                    android:layout_marginLeft="16dp"
                    android:textSize="17sp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="Bread"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_weight="0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bread"
                    android:id="@+id/bread"
                    android:layout_marginLeft="16dp"
                    android:textSize="17sp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="Coat"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_weight="0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Coat"
                    android:id="@+id/coat"
                    android:layout_marginLeft="16dp"
                    android:textSize="17sp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_weight="0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:id="@+id/age"
                    android:layout_marginLeft="16dp"
                    android:textSize="17sp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_weight="0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:id="@+id/gender"
                    android:layout_marginLeft="16dp"
                    android:textSize="17sp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="Confirm Stud"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_weight="0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirm Stud"
                    android:id="@+id/confirm_stud"
                    android:layout_marginLeft="16dp"
                    android:textSize="17sp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="Dog Type"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_weight="0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dog Type"
                    android:id="@+id/dog_type"
                    android:layout_marginLeft="16dp"
                    android:textSize="17sp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="Pedigree Link"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_weight="0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pedigree Link"
                    android:id="@+id/predigree_link"
                    android:layout_marginLeft="16dp"
                    android:textSize="17sp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Confirm Breeder"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_weight="0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirm Breeder"
                    android:id="@+id/confirm_breeder"
                    android:layout_marginLeft="16dp"
                    android:textSize="17sp"
                    android:layout_weight="1"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textColor="#4CAF50"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:layout_weight="0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="price"
                    android:textColor="#4CAF50"
                    android:id="@+id/price"
                    android:layout_marginLeft="16dp"
                    android:textSize="18sp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact"
                    android:textColor="#3F51B5"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_weight="0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="contact"
                    android:textColor="#3F51B5"
                    android:id="@+id/contact"
                    android:layout_marginLeft="16dp"
                    android:textSize="17sp"
                    android:layout_weight="1"/>

            </LinearLayout>


            <android.widget.Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20sp"
                android:text="Chat"
                android:onClick="Chat_Now"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/btn_back"/>


        </LinearLayout>

    </ScrollView>


</LinearLayout>